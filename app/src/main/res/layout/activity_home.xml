<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".HomeActivity">

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#1e2939"
            app:headerLayout="@layout/header_drawer"
            app:itemTextColor="@android:color/white"
            app:itemIconTint="@android:color/white"
            app:menu="@menu/drawer_menu"
            android:layout_gravity="start"
            >

        </android.support.design.widget.NavigationView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp"
        android:background="@drawable/bg">

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="312sp"
            android:layout_height="50sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/text_LNSD"
            android:layout_marginTop="12sp"
            android:gravity="center_vertical"
            android:text="Date"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="320sp"
            android:layout_below="@+id/text_view_date">
        </com.github.mikephil.charting.charts.PieChart>

        <TextView
            android:id="@+id/text_LNSD"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@+id/chart"
            android:layout_marginTop="15sp"
            android:text="Last Night Sleep Duration : "
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_DSD"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@+id/text_LNSD"
            android:text="Deep Sleep Duration : "
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/activities"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_DSD"
            android:layout_marginTop="5sp"
            android:layout_marginStart="25sp"
            android:background="@drawable/activities" />

        <Button
            android:id="@+id/sleeptrack"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_DSD"
            android:layout_marginEnd="25sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/sleep_track" />

        <Button
            android:id="@+id/refresh"
            android:layout_width="78sp"
            android:layout_height="38sp"
            android:layout_marginTop="17sp"
            android:layout_toEndOf="@+id/text_view_date"
            android:background="@drawable/signup_button"
            android:text="Sync" />

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
