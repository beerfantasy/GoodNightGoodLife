<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/refreshButton"
        android:layout_marginStart="19sp"
        android:text="Activity"
        android:layout_marginTop="60sp"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/activity">
    </com.github.mikephil.charting.charts.LineChart>

    <TextView
        android:id="@+id/avg_relax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/activity"
        android:layout_below="@+id/line_chart"
        android:layout_marginTop="20sp"
        android:text="Average Relaxation"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/button_start"
        android:layout_width="134sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avg_relax"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45sp"
        android:background="@drawable/signup_button"
        android:text="Start" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="134sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avg_relax"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45sp"
        android:background="@drawable/signup_button"
        android:text="Finish" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_marginStart="85sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43sp"
        android:background="@drawable/signup_button"
        android:text="Connect" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/connectButton"
        android:layout_marginEnd="94sp"
        android:background="@drawable/signup_button"
        android:text="refresh" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:visibility="visible"
        android:backgroundTint="@android:color/white"/>


</RelativeLayout>
