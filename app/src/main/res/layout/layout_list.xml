<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_margin="5sp"
        card_view:cardBackgroundColor="#10FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp">

            <TextView
                android:id="@+id/date_list"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:textSize="24sp"
                android:layout_marginTop="5sp"
                android:gravity="center_vertical"
                android:text="Date"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/activity_list"
                android:layout_width="190dp"
                android:layout_height="45sp"
                android:layout_below="@+id/date_list"
                android:layout_marginTop="5sp"
                android:gravity="center_vertical"
                android:text="Activity : "
                android:textColor="#bdcfef"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/duration_list"
                android:layout_width="188dp"
                android:layout_height="45sp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/activity_list"
                android:layout_marginEnd="0dp"
                android:gravity="center_vertical"
                android:text="Duration : "
                android:textColor="#bdcfef"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/avg_relax_list"
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:layout_alignStart="@+id/date_list"
                android:layout_below="@+id/activity_list"
                android:layout_marginTop="5sp"
                android:gravity="center_vertical"
                android:text="Avg. Relax : "
                android:textColor="#bdcfef"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/avg_relax_list_num"
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:layout_alignEnd="@+id/activity_list"
                android:layout_marginTop="5sp"
                android:layout_below="@+id/activity_list"
                android:layout_toEndOf="@+id/avg_relax_list"
                android:gravity="center_vertical"
                android:text="Avg.Relax"
                android:textColor="#bdcfef"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/deepsleep_list"
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:layout_alignStart="@+id/duration_list"
                android:layout_below="@+id/activity_list"
                android:gravity="center_vertical"
                android:text="Deep Sleep: "
                android:textColor="#bdcfef"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/deepsleep_list_num"
                android:layout_width="79sp"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:layout_alignEnd="@+id/date_list"
                android:layout_below="@+id/activity_list"
                android:layout_toEndOf="@+id/deepsleep_list"
                android:gravity="center_vertical"
                android:text="Deepsleep"
                android:textColor="#bdcfef"
                android:textSize="18sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>